---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

export interface BlogPost {
  title: string;
  description: string;
  publishDate: string;
  author: string;
  category?: string;
  tags?: string[];
  featuredImage?: any;
  file: string;
}

const siteTitle = "NextFrame Digest | Jump ahead, stay updated";
const description = 'NextFrame Digest is a dynamic blog that keeps you one step ahead with the freshest updates in news, groundbreaking science, cutting-edge tech, and a preview of what’s next in movies and games. Every “next frame” reveals a compelling story—whether it’s a thrilling trailer or a world-changing discovery';

const permalink = Astro.site 
  ? new URL('/home', Astro.site).href 
  : '/home';

const postModules = import.meta.glob('../data/blog-posts/*.md', { eager: true });

const allPostsMetadata: BlogPost[] = Object.entries(postModules).map(([path, mod]: [string, any]) => {
  const { frontmatter } = mod;
  return {
    title: frontmatter.title,
    description: frontmatter.description,
    publishDate: frontmatter.publishDate,
    author: frontmatter.author || "Anonymous",
    category: frontmatter.category,
    tags: frontmatter.tags,
    featuredImage: frontmatter.featuredImage,
    file: path,
  };
});

const sortedPosts = allPostsMetadata.sort((a, b) => 
  new Date(b.publishDate).valueOf() - new Date(a.publishDate).valueOf()
);

const latestPost = sortedPosts[0];
const featuredPosts = sortedPosts.slice(1, 3);
const sidebarPosts = sortedPosts.slice(3, 6);

const getPostUrl = (post: BlogPost) => {
  const parts = post.file.split('/');
  const filename = parts[parts.length - 1].replace(/\.md$/, '');
  return `/blog/${filename}`;
};

const newsPosts = allPostsMetadata.filter((post) => post.category === "News");
const techSciencePosts = allPostsMetadata.filter((post) => post.category === "Tech and Science");
const dealsPosts = allPostsMetadata.filter((post) => post.category === "Deals");`
`
const trailerPosts = allPostsMetadata.filter((post) => post.category === "Trailers");
const entertainmentPosts = allPostsMetadata.filter((post) => post.category === "Entertainment");
---

<BaseLayout title={siteTitle} description={description} permalink={permalink}>
  <div class="py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {/* Main Content Area */}
      <div class="lg:col-span-2">
        {latestPost && (
          <div class="overflow-hidden mb-8">
            <div class="group">
              {latestPost.featuredImage && (
                <a href={getPostUrl(latestPost)}>
                  <Image 
                    src={latestPost.featuredImage} 
                    alt={latestPost.title}
                    class="w-full h-96 object-cover"
                    width={800}
                    height={450}
                  />
                </a>
              )}
              <div class="p-6">
                <a href={getPostUrl(latestPost)} class="block">
                  <h2 class="text-2xl font-bold mb-4 group-hover:text-[#548e9b transition-colors duration-100">
                    {latestPost.title}
                  </h2>
                </a>
                <p class="mb-4">{latestPost.description}</p>
                <div class="flex justify-between text-sm">
                  <span class="author">By {latestPost.author}</span>
                  <span>{latestPost.publishDate}</span>
                </div>
                <div class="mt-4">
                  <a class="read-more-btn" href={getPostUrl(latestPost)} class="px-4 py-2 rounded">
                    Read Full Article
                  </a>
                </div>
              </div>
            </div>
          </div>
        )}

        {/* Featured Stories */}
        <div class="grid md:grid-cols-2 gap-6">
          {featuredPosts.map((post) => (
            <div class="overflow-hidden group">
              {post.featuredImage && (
                <a href={getPostUrl(post)}>
                  <Image 
                    src={post.featuredImage} 
                    alt={post.title}
                    class="w-full h-48 object-cover"
                    width={400}
                    height={225}
                  />
                </a>
              )}
              <div class="p-4">
                <a href={getPostUrl(post)} class="block">
                  <h3 class="text-lg font-semibold mb-2 group-hover:text-[#548e9b] transition-colors duration-100">
                    {post.title}
                  </h3>
                </a>
                <p class="text-sm mb-3">{post.description}</p>
                <div class="flex justify-between text-xs">
                  <span class="author">By {post.author}</span>
                  <span>{post.publishDate}</span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      {/* Sidebar */}
      <div class="lg:col-span-1 p-6">
        <h3 class="text-xl font-bold mb-6">Latest Stories</h3>
        {sidebarPosts.map((post) => (
          <div class="mb-6 pb-6 border-b last:border-b-0 group">
            <a href={getPostUrl(post)} class="block">
              <h4 class="text-md font-semibold mb-2 hover:text-[#548e9b] transition-colors duration-100">
                {post.title}
              </h4>
              <div class="flex justify-between text-xs">
                
                <span>{post.publishDate}</span>
              </div>
            </a>
          </div>
        ))}
      </div>
    </div>
  </div>  


  
<div class="py-8">
  <!-- Top Row Grid with News, Science, and Entertainment -->
  <div class="grid grid-cols-12 gap-8 mb-10">
   <!-- News Section - Left Column -->
<div class="col-span-4">
  <h2 class="text-3xl font-bold mb-6">News</h2>

  {newsPosts
    .sort((a, b) => new Date(b.publishDate) - new Date(a.publishDate)) // Sort by date
    .slice(0, 2) // Get only the latest 2 posts
    .map((post) => (
      <div class="mb-8">
        <div class="flex">
          <div class="flex-grow pr-4">
            <a href={getPostUrl(post)} class="block hover:text-[#548e9b] transition-colors">
              <h4 class="text-md font-semibold mb-1">{post.title}</h4>
            </a>
          </div>
          <div class="flex-shrink-0">
            <a href={getPostUrl(post)} class="block">
              <div class="w-32 h-24 relative overflow-hidden">
                {post.featuredImage && (
                  <img 
                    src={post.featuredImage} 
                    alt={post.title}
                    class="object-cover w-full h-full"
                  />
                )}
              </div>
            </a>
          </div>
        </div>
        <div class="border-b border-gray-700 mt-6"></div>
      </div>
    ))}
  </div>

    
    <!-- Tech and Science Section - Middle Column -->
    <div class="col-span-4">
      <h2 class="text-3xl font-bold mb-6">Technology & Science</h2>
      
      {techSciencePosts
        .sort((a, b) => new Date(b.publishDate) - new Date(a.publishDate)) // Sort by date
        .slice(0, 2) // Get only the latest 2 posts
        .map((post) => (
          <div class="mb-8">
            <div class="flex">
              <div class="flex-grow pr-4">
                <a href={getPostUrl(post)} class="block hover:text-[#548e9b] transition-colors">
                  <h3 class="text-md font-semibold mb-1">{post.title}</h3>
                </a>
              </div>
              <div class="flex-shrink-0">
                <a href={getPostUrl(post)} class="block">
                  <div class="w-32 h-24 relative overflow-hidden">
                    {post.featuredImage && (
                      <img 
                        src={post.featuredImage} 
                        alt={post.title}
                        class="object-cover w-full h-full"
                      />
                    )}
                  </div>
                </a>
              </div>
            </div>
            <div class="border-b border-gray-700 mt-6"></div>
          </div>
        ))}
      </div>
    
    <!-- Entertainment Section - Right Column (extends vertically) -->
    <div class="col-span-4">
      <h2 class="text-3xl font-bold mb-6">Entertainment</h2>
      
      {entertainmentPosts
        .sort((a, b) => new Date(b.publishDate) - new Date(a.publishDate)) // Sort by date
        .slice(0, 5) // Get only the latest 2 posts
        .map((post) => (
          <div class="mb-8">
            <div class="flex">
              <div class="flex-grow pr-4">
                <a href={getPostUrl(post)} class="block hover:text-[#548e9b] transition-colors">
                  <h3 class="text-md font-semibold mb-1">{post.title}</h3>
                </a>
              </div>
              <div class="flex-shrink-0">
                <a href={getPostUrl(post)} class="block">
                  <div class="w-32 h-24 relative overflow-hidden">
                    {post.featuredImage && (
                      <img 
                        src={post.featuredImage} 
                        alt={post.title}
                        class="object-cover w-full h-full"
                      />
                    )}
                  </div>
                </a>
              </div>
            </div>
            <div class="border-b border-gray-700 mt-6"></div>
          </div>
        ))}
      </div>
      
  
    <!-- Bottom Row Grid with Deals and Trailers -->
  <div class="grid grid-cols-12 gap-8">
    <!-- Deals Section - Bottom Left -->
    <div class="col-span-4">
      <h2 class="text-3xl font-bold mb-6">Deals</h2>
      
      {dealsPosts
        .sort((a, b) => new Date(b.publishDate) - new Date(a.publishDate)) // Sort by date
        .slice(0, 2) // Get only the latest 2 posts
        .map((post) => (
          <div class="mb-8">
            <div class="flex">
              <div class="flex-grow pr-4">
                <a href={getPostUrl(post)} class="block hover:text-[#548e9b] transition-colors">
                  <h3 class="text-md font-semibold mb-1">{post.title}</h3>
                </a>
              </div>
              <div class="flex-shrink-0">
                <a href={getPostUrl(post)} class="block">
                  <div class="w-32 h-24 relative overflow-hidden">
                    {post.featuredImage && (
                      <img 
                        src={post.featuredImage} 
                        alt={post.title}
                        class="object-cover w-full h-full"
                      />
                    )}
                  </div>
                </a>
              </div>
            </div>
            <div class="border-b border-gray-700 mt-6"></div>
          </div>
        ))}
    </div>
    
    <!-- Trailers Section - Bottom Middle -->
    <div class="col-span-4">
      <h2 class="text-3xl font-bold mb-6">Trailers</h2>
      
      {trailerPosts
        .sort((a, b) => new Date(b.publishDate) - new Date(a.publishDate)) // Sort by date
        .slice(0, 2) // Get only the latest 2 posts
        .map((post) => (
          <div class="mb-8">
            <div class="flex">
              <div class="flex-grow pr-4">
                <a href={getPostUrl(post)} class="block hover:text-[#548e9b] transition-colors">
                  <h3 class="text-md font-semibold mb-1">{post.title}</h3>
                </a>
              </div>
            <div class="flex-shrink-0">
              <a href={getPostUrl(post)} class="block">
                <div class="w-32 h-24 relative overflow-hidden">
                  {post.featuredImage && (
                    <img 
                      src={post.featuredImage} 
                      alt={post.title}
                      class="object-cover w-full h-full"
                    />
                  )}
                </div>
              </a>
            </div>
          </div>
          <div class="border-b border-gray-700 mt-6"></div>
        </div>
      ))}
    </div>
    
    <!-- Empty Column - Bottom Right (to maintain grid structure) -->
    <div class="col-span-4"></div>
  </div>
</div>
</BaseLayout>

<style>
  a {
    text-decoration: none;
  }

  .author {
    font-family: var(--font-family-serif, 'Merriweather', serif);
    font-weight: 700;
}

.read-more-btn {
    display: inline-block;
    padding: 8px 16px;
    background-color: var(--primary-color, #4a6cf7);
    color: white;
    border-radius: 4px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background-color 0.4s ease-in;
    font-weight: 500;
  }

  .read-more-btn:hover {
    background-color: white;
    color: var(--primary-color, #4a6cf7);
    transition: background-color 0.4s ease-out;
  }

  
</style>
